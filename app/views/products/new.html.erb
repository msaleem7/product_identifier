<div class="container mt-5">
  <%= form_with url: products_path, id: "products_form" do |f| %>
    <div class="form-group row">
      <label for="sku" class="col-sm-2 col-form-label">SKU</label>
      <div class="col-sm-10">
        <%= f.text_field :sku, class: 'form-control', placeholder: 'Enter SKU', required: true %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label">DeepLink</label>
      <div class="col-sm-10">
        <span><%= site_url %></span>
        <span id="sku_val"></span>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="image_urls">Image URL's</label>
      <div class="col-sm-10">
        <%= f.check_box :image_urls, class: 'form-check-input' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="name">Name</label>
      <div class="col-sm-10">
        <%= f.check_box :name, class: 'form-check-input' %>
      </div>
    </div>

    <div class="form-group row">
      <label class="col-sm-2 col-form-label" for="price">Price</label>
      <div class="col-sm-10">
        <%= f.check_box :price, class: 'form-check-input' %>
      </div>
    </div>

    <%= f.submit 'SEARCH', class: 'btn btn-primary' %>
  <% end %>
</div>